{
  "manifest_version": 3,
  "name": "My Karaoke Party",
  "version": "1.0.0",
  "minimum_chrome_version": "116",
  "description": "Allows My Karaoke Party to work with non-embeddable YouTube videos.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}